{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "strict": true, 
  "esModuleInterop": true, 
  "skipLibCheck": true, 
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
}
